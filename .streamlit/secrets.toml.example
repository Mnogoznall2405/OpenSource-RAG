# Пример файла secrets.toml для Streamlit Cloud
# Скопируйте этот файл в .streamlit/secrets.toml для локального тестирования
# или добавьте эти секреты в настройках Streamlit Cloud

# Weaviate настройки
[weaviate]
host = "localhost"
port = 8080
grpc_port = 50051
data_path = "/var/lib/weaviate"

# Модели и API
[api]
openrouter_key = "your_openrouter_api_key_here"
openrouter_model = "anthropic/claude-3-haiku"
openrouter_url = "https://openrouter.ai/api/v1"
huggingface_token = "your_huggingface_token_here"

# Google Programmable Search Engine
[google]
pse_api_key = "your_google_api_key_here"
pse_id = "your_google_programmable_search_engine_id_here"

# Дополнительные настройки
[settings]
embedding_model = "sentence-transformers/all-MiniLM-L6-v2"
debug = false 